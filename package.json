{
  "name": "playwright-aws-lambda",
  "version": "2.0.0",
  "description": "AWS Lambda with Playwright using Docker",
  "main": "handler.js",
  "scripts": {
    "deploy": "serverless deploy",
    "docker:build": "docker build -t playwright-lambda .",
    "docker:run": "docker run -p 9000:8080 playwright-lambda",
    "docker:call": "curl -XPOST http://localhost:9000/2015-03-31/functions/function/invocations -d '{ \"url\": \"https://shillitto.com\" }' && echo"
  },
  "keywords": [
    "aws",
    "lambda",
    "playwright",
    "docker",
    "serverless"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "serverless": "^3.35.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
